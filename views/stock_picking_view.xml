<odoo>
    <record id="view_picking_form_inherit_customer_ref" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.customer.ref</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='origin']" position="after">
                <field name="customer_reference_id"/>
                <field name="sale_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
            </xpath>

        </field>
    </record>
</odoo>
